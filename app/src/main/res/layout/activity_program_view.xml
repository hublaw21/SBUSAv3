<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramViewActivity">

    <TextView
        android:id="@+id/textViewCompetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textMedium"
        android:textAlignment="center"
        android:text="TextView1"/>

    <TextView
        android:id="@+id/textViewProgramDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView2"/>

    <TableLayout
        android:id="@+id/programElementsTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumTable">

        <TableRow
            android:id="@+id/elementRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elementRow01elementID"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="elementID" />

            <TextView
                android:id="@+id/elementRow01elementName"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="elementName" />

            <TextView
                android:id="@+id/elementRow01elementBaseValue"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="elementBaseValue" />
        </TableRow>

        <TableRow
            android:id="@+id/elementRow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elementRow02elementID"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="elementID" />

            <TextView
                android:id="@+id/elementRow02elementName"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="elementName" />

            <TextView
                android:id="@+id/elementRow02elementBaseValue"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="elementBaseValue" />
        </TableRow>


    </TableLayout>


</LinearLayout>