<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.khubbart.mysbusaappv3.ElementLookupActivity">

    <Spinner
        android:id="@+id/spinnerElementTypeSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder"
        android:background="@color/colorPrimary"
        android:dropDownSelector="@color/colorPrimary"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textViewSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_selected" />


    <fragment
        android:id="@+id/fragmentElementDetail"
        android:name="com.example.khubbart.mysbusaappv3.ElementDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/thinBorder"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentSelectJump"
            android:name="com.example.khubbart.mysbusaappv3.SelectJumpFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mediumBorder"/>

        <fragment
            android:id="@+id/fragmentSelectRevelution"
            android:name="com.example.khubbart.mysbusaappv3.SelectRevolutionsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mediumBorder"/>
    </LinearLayout>

</LinearLayout>