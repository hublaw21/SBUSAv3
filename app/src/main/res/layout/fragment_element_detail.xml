<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableRow
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/textViewElementDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="Row 1"
            android:textColor="#fff" />
    </TableRow>

    <TableRow
        android:id="@+id/rowBaseTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Base"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="V1"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="V2"
            android:textColor="#fff" />
    </TableRow>

    <TableRow
        android:id="@+id/rowElementDetailBaseValues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/elementDetailBaseValue"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailV1Value"
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailV2Value"
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="X"
            android:textColor="#fff" />
    </TableRow>


    <TableRow
        android:id="@+id/rowGOETitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="2dp"
        android:layout_weight="1">

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE -3"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE -2"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE -1"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE 1"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE 2"
            android:textColor="#fff" />

        <TextView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GOE 3"
            android:textColor="#fff" />
    </TableRow>

    <TableRow
        android:id="@+id/rowGOEValues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_weight="1">

        <TextView
            android:id="@+id/elementDetailGOEm3"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailGOEm2"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailGOEm1"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailGOEp1"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailGOEp2"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/elementDetailGOEp3"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff" />
    </TableRow>

</TableLayout>