<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:textColor="@color/black"

    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textLarge"
        android:hint="Your Name" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumTable">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumTable">

            <TextView
                android:id="@+id/textViewClubTitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mediumTable"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:text="Club:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textViewClub"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:hint="Your Club"
                android:textAlignment="textStart" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumTable">

            <TextView
                android:id="@+id/textViewCoachTitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mediumTable"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:text="Your Coach:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textViewCoach"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:hint="Your Coach"
                android:textAlignment="textStart" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumTable">

            <TextView
                android:id="@+id/textVieweMailTitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mediumTable"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:text="email:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textVieweMail"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textColor="@color/black"
                android:textSize="@dimen/textMedium"
                android:hint="Your email"
                android:textAlignment="textStart" />

        </TableRow>

    </TableLayout>

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.khubbart.mysbusaappv3.ButtonBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>