<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_tic_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_capsule_default"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/mediumTable"
    tools:context=".ProgramScoringViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="@dimen/narrowTable"
        android:text="Element Notations"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textMedium" />

    <Button
        android:id="@+id/tic_element_check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/largeTable"
        android:background="@drawable/button_box_default_shape"
        android:padding="@dimen/mediumTable"
        android:text="! - Review Element"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/tic_element_edge_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/largeTable"
        android:background="@drawable/button_box_default_shape"
        android:padding="@dimen/mediumTable"
        android:text="e - Edge"
        android:textAlignment="center"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/tic_element_downgrade_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/largeTable"
        android:layout_weight="1"
        android:background="@drawable/button_box_default_shape"
        android:padding="@dimen/mediumTable"
        android:text=" - Downgrade"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
    android:id="@+id/tic_element_double_downgrade_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/largeTable"
    android:background="@drawable/button_box_default_shape"
    android:padding="@dimen/mediumTable"
    android:text=" - Double Downgrade"
    android:textAlignment="center"
    android:textColor="@color/white" />

    <Button
        android:id="@+id/tic_element_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/largeTable"
        android:background="@drawable/button_box_default_shape"
        android:padding="@dimen/mediumTable"
        android:text="Cancel and Return"
        android:textAlignment="center"
        android:textColor="@color/white" />

</LinearLayout>