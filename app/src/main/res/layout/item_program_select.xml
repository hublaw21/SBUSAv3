<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/program_select_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorAccent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorAccent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/program_select_competition_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                tools:text="Competition Name" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/program_select_discipline_item_text"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textAlignment="center"
                tools:text="Discipline" />

            <TextView
                android:id="@+id/program_select_level_item_text"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textAlignment="center"
                tools:text="Level" />

            <TextView
                android:id="@+id/program_select_segment_item_text"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textAlignment="center"
                tools:text="Segment" />

        </TableRow>
    </TableLayout>
</LinearLayout>