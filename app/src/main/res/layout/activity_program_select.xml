<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramSelectActivity">

    <TextView
        android:id="@+id/textViewProgramSelectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder"
        android:backgroundTint="@color/colorAccent"
        android:text="UID"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewProgramSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder"
        android:text="Select Program to View"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewProgramSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:layout_margin="@dimen/mediumBorder" />
</LinearLayout>