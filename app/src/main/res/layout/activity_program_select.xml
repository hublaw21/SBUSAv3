<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramSelectActivity">

    <TextView
        android:id="@+id/textViewProgramSelectSkaterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textSize="@dimen/textLarge"
        android:text="Skater Name Here"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewProgramSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textSize="@dimen/textMedium"
        android:text="Select a Program to Enter, Edit or Score"
        android:textAlignment="center" />

    <RadioGroup
        android:id="@+id/radioGroupPrograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumBorder">

        <RadioButton
            style="@style/styleRadioButtonPrograms"
            android:id="@+id/radioButtonProgram0"
            android:checked="true"/>
            <!--
        <RadioButton
            style="@style/styleRadioButtonPrograms"
            android:id="@+id/radioButtonProgram1" />
        <RadioButton
            style="@style/styleRadioButtonPrograms"
            android:id="@+id/radioButtonProgram2"/>
        <RadioButton
            style="@style/styleRadioButtonPrograms"
            android:id="@+id/radioButtonProgram3"/>
 -->
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            style="@style/styleButtonChoice"
            android:text="Cancel" />

        <Button
            android:id="@+id/buttonAddEdit"
            style="@style/styleButtonChoice"
            android:text="Add/Edit" />

        <Button
            android:id="@+id/buttonScore"
            style="@style/styleButtonChoice"
            android:text="Score" />
    </LinearLayout>

</LinearLayout>